pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'pip install dbt-postgres'
            }
        }

        stage('Run tests') {
            steps {
                sh 'dbt test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'dbt run'
            }
        }
    }
}

